<h3> Add comments </h3>
<div class="card card-body bg-light">
<%= form_for ([@post, @post.comments.new]) do |f| %>
  <p>
    <%= f.label :username  %><br>
    <%= f.text_field :username, class: 'form-control' %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body , class: 'form-control' %>
  </p>
 
  <p>
    <%= f.submit class:'btn btn-info'%>
  </p>
<% end %>  
</div>